<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F1F1F1"
    android:orientation="vertical"
    tools:context="com.goaffilate.app.Fragment.FragmentStore">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="#FFFB5707"
        android:layout_height="wrap_content">

    <android.support.v7.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/search_view_store"
        app:queryHint="Search Store"

        android:background="@drawable/searchviewback"
        android:layout_margin="10dp"
        android:padding="10dp"
        >

    </android.support.v7.widget.SearchView>

    </android.support.v7.widget.Toolbar>


    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/view"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="bottom"
        android:padding="10dip"
        app:centered="true"
        app:fillColor="#ffffff"
        app:pageColor="#0D0000"
        app:snap="false" />

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:id="@+id/viewpager_banner"
        android:layout_height="150dp"
        android:layout_margin="10dp">

    </android.support.v4.view.ViewPager>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/show_storepost"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>



</LinearLayout>
