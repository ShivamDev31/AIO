<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rede"
    tools:context=".RedeemActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp" android:layout_centerInParent="true"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/top"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">


            <EditText
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/space_4"
                android:textSize="14sp"
                android:hint="Enter Amount"
                android:paddingLeft="@dimen/_20sdp"
                android:drawablePadding="10dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/space_5"
                android:background="@drawable/bbg"
                android:ems="10"
                android:inputType="textFilter" />



            <EditText

                android:id="@+id/et_paytm_mobile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:drawablePadding="10dp"
                android:layout_marginTop="@dimen/space_10"
                android:textSize="14sp"
                android:paddingLeft="@dimen/_20sdp"
                android:hint="Paytm Mobile Number"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bbg"
                android:ems="10"
                android:inputType="number" />





        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="70dp"

            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:text="Redeem"
                    android:textSize="25sp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:background="@drawable/cc"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/redeem"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/rightarrow"
                        android:textColor="@color/white"
                        android:layout_width="50dp"
                        android:layout_height="@dimen/_30sdp" />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>



    </RelativeLayout>
</LinearLayout>